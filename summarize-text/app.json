{
    "id": "summarize-text",
    "version": "0.1.1",
    "description": "Summarize your text wtih HuggingFace Transformers. Arguments: text, minLength, maxLength, model_name",
    "jobType": "BATCH",
    "runtime": "SINGULARITY",
    "runtimeOptions": ["SINGULARITY_RUN"],
    "containerImage": "docker://prithuls/summarize-text:latest",
    "jobAttributes": {
        "parameterSet": {
            "archiveFilter": { 
                "includeLaunchFiles": false 
            }
        },
        "memoryMB": 1,
        "nodeCount": 1,
        "coresPerNode": 1,
        "maxMinutes": 20
    }
}